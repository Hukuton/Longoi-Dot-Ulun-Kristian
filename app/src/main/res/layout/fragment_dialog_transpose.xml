<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corners"
    android:orientation="vertical"
    android:padding="15dp">

    <RadioGroup
        android:id="@+id/transposeRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonMinusFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-5"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/radioButtonMinusFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-4"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/radioButtonMinusThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-3"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/radioButtonMinusTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="-2"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/radioButtonMinusOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/radioButtonZero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/radioButtonPlusOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/radioButtonPlusTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/radioButtonPlusThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/radioButtonPlusFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+4"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/radioButtonPlusFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5"
            android:theme="@style/MyRadioButton" />

        <RadioButton
            android:id="@+id/radioButtonPlusSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+6"
            android:theme="@style/MyRadioButton" />
    </RadioGroup>

</LinearLayout>